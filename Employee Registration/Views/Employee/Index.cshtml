        if (selectedRow.length > 0) {

           if(confirm("Are you sure you want to proceed?")){
    
               $.ajax({
                     url: "../Employee/Delete",
                     type: "POST",
                     data: { ID: selectedRow[0].employee_Id },
                     success: function (response) {
                        
